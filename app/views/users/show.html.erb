<h1><%= @user.username %>'s posts</h1>
<img height=100 width=100 <%= image_tag(current_user.profile_image) if current_user.profile_image.attached? %></img>
<br>
<br>

<% @user_posts.reverse.each do |post| %>

  <img height=250 width=250 <%= image_tag(post.main_image) if post.main_image.attached? %> </img>

  <h3><%= post.title %></h3>

  <p><%= post.description %></p>

  <p><%= post.created_at.strftime('%d %B %Y | %I:%M%P ') %></p>

<% end %>
