<h1><%= current_user.username %>'s posts</h1>
<img height=100 width=100 <%= image_tag current_user.profile_image %></img>
<br>
<br>

<% @user_posts.reverse.each do |post| %>

<%= image_tag post.main_image %>

<h3><%= post.title %></h3>

<p><%= post.description %></p>

<p><%= post.created_at.strftime('%d %B %Y | %I:%M%P ') %></p>

<% end %>
