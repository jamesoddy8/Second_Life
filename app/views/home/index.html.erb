<h1>Second Life</h1>
<% if logged_in? %>

  <h2>Welcome <%= current_user.username %> </h2>

<%end%>

<%= button_to "New Post", 'posts/new', method: :get %>

<%= button_to "logout", '/logout', method: :delete%>

<h1> All Posts </h1>

<% @posts.reverse.each do |post| %>
<%= image_tag post.main_image %> <br>
<h3><%= post.title %> </h3>
<p><%= post.description %> </p><br>
<p><%= link_to 'Edit', posts_edit_path, method: :get %>
<p><%= button_to 'Delete', posts_path, :method => :delete, data: { confirm: "Are you sure?" }%> </p>
<% end %>
