<% @posts.reverse.each do |post| %>
<%= image_tag post.main_image %> <br>
<h3><%= post.title %> </h3>
<p><%= post.description %> </p><br>
<p><%= link_to 'Edit', posts_edit_path, method: :get %>
<p><%= button_to 'Delete', posts_path, :method => :delete, data: { confirm: "Are you sure?" }%> </p>
<% end %>
